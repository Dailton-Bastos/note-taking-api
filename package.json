{
	"name": "note-taking-api",
	"version": "0.0.1",
	"description": "Many fun and challenging features to add, including color and font themes",
	"author": "Dailton Bastos",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "bunx biome format --write .",
		"start": "nest start",
		"start:dev": "bun --watch ./src/main.ts",
		"start:debug": "nest start --debug --watch",
		"start:prod": "bun ./src/main.ts",
		"lint": "bunx biome lint --write .",
		"check": "bunx biome check --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prepare": "husky || true",
		"commit": "cz",
		"typeorm": "ts-node ./node_modules/typeorm/cli",
		"migration:create": "bun run typeorm migration:create ./src/database/migrations/$(echo $NAME)",
		"migration:run": "bun run typeorm migration:run -d ./src/config/typeOrm.config.ts",
		"migration:revert": "bun run typeorm migration:revert -d ./src/config/typeOrm.config.ts",
		"migration:generate": "bun run typeorm migration:generate ./src/database/migrations/$(echo $NAME) -d ./src/config/typeOrm.config.ts"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,tsx,json}": [
			"bunx biome format --write --no-errors-on-unmatched",
			"bunx biome check --files-ignore-unknown=true",
			"bunx biome check --write --no-errors-on-unmatched",
			"bunx biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
			"bunx biome check --write --unsafe --no-errors-on-unmatched",
			"bunx biome lint --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.0",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/typeorm": "^11.0.0",
		"@oslojs/encoding": "^1.1.0",
		"argon2": "^0.41.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.7",
		"joi": "^17.13.3",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"uuid": "^11.1.0",
		"yn": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.4.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": ["js", "json", "ts"],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
