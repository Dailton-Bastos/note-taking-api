{{#> layout }}
  <h1
    style="font-size:24px;letter-spacing:-0.5px;line-height:1.3;font-weight:400;color:#484848;padding:17px 0 0">
    Your Login Code for Note Taking
  </h1>

  <p
    style="font-size:15px;line-height:1.4;margin-bottom:16px;margin-top:16px;margin:0 0 15px;color:#3c4149">
    This code will only be valid for the next 5 minutes.
  </p>

  <code
    style="font-family:monospace;font-weight:700;padding:1px 4px;background-color:#dfe1e4;letter-spacing:-0.3px;font-size:21px;border-radius:4px;color:#3c4149">
    {{code}}
  </code>
{{/layout}}
